<div class="order-link">
  <a><%= link_to '注文する', new_order_path %></a>
</div>

<%= @orders.each do |order| %>
  <div class="order">
    <p>カレー：<%= order.curry.name %></p>
    <p>ライス量：<%= order.ricesize.name %></p>
    <p>辛さ：<%= order.spiceness.name %></p>
    <%= link_to "delete", order, data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" }%>
    <%= link_to "edit", edit_order_path(order.id) %>
  </div>
<% end %>